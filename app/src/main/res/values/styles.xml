<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="title" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="list_item" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <color name="light_blue">#FF6060FF</color>
    <color name="purple">#700070</color>
    <color name="black">#000000</color>
    <dimen name="medium_padding">5dp</dimen>
    <dimen name="small_text">18dp</dimen>
    <dimen name="small_padding">3dp</dimen>
</resources>
